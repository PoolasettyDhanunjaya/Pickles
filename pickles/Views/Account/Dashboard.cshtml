@{
    ViewData["Title"] = "Fruit Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Fruit Dashboard</h2>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
        <div class="col">
            <div class="card h-100 shadow">
                <img src="https://upload.wikimedia.org/wikipedia/commons/1/15/Red_Apple.jpg" class="card-img-top" alt="Apple">
                <div class="card-body text-center">
                    <h5 class="card-title">Apple</h5>
                    <p class="card-text">Price: <strong>$1.50</strong></p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow">
                <img src="https://upload.wikimedia.org/wikipedia/commons/8/8a/Banana-Single.jpg" class="card-img-top" alt="Banana">
                <div class="card-body text-center">
                    <h5 class="card-title">Banana</h5>
                    <p class="card-text">Price: <strong>$0.75</strong></p>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow">
                <img src="https://upload.wikimedia.org/wikipedia/commons/c/c4/Orange-Fruit-Pieces.jpg" class="card-img-top" alt="Orange">
                <div class="card-body text-center">
                    <h5 class="card-title">Orange</h5>
                    <p class="card-text">Price: <strong>$1.20</strong></p>
                </div>
            </div>
        </div>

    </div>
</div>
